@page
@model EmailClientWebApp.Pages.SendMsgModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">New Message</h1>
            <form method="post" asp-action="SendMsg" asp-handler="Send" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="to">To:</label>
                    <input type="email" class="form-control" id="to" name="To" required>
                </div>
                <div class="form-group">
                    <label for="subject">Subject:</label>
                    <input type="text" class="form-control" id="subject" name="Subject" required>
                </div>
                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea class="form-control" id="message" name="Message" rows="5" required></textarea>
                </div>
                <div class="form-group">
                    <label for="attachment">Attachments:</label>
                    <input type="file" class="form-control-file" id="attachment" name="Attachment" multiple>
                </div>
                <div class="text-center">
                    <button type="button" class="btn btn-secondary mr-2" onclick="location.href='@Url.Page("Index")'">Cancel</button>
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>
