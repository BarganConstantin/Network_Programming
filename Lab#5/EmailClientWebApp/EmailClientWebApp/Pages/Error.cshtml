@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="bg-light d-flex align-items-center justify-content-center vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <h1 class="mb-4"><i class="fas fa-exclamation-triangle mr-2"></i>Error</h1>
                <p class="lead">Sorry, something went wrong. Please try again later.</p>
                <button class="btn btn-primary mt-4" onclick="location.href='@Url.Page("Index")'">Continue</button>
            </div>
        </div>
    </div>
</div>

